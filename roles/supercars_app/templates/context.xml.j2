<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Cars_Sample_App">
    <!-- Specify a JDBC datasource for oracle -->
    <Resource name="jdbc/standard" 
              auth="Container"
              type="javax.sql.DataSource" 
              username="{{ database_username }}" 
              password="{{ database_password }}"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://{{ database_host }}:3306/supercars?useSSL=false"
              maxIdle="4" />
    <Resource name="jdbc/c3p0" 
              auth="Container"
              type="com.mchange.v2.c3p0.ComboPooledDataSource"
              factory="org.apache.naming.factory.BeanFactory"
              maxPoolSize="20"
              minPoolSize="5"
              maxIdleTime="3000" 
              user="{{ database_username}}" 
              password="{{ database_password }}"
              driverClass="com.mysql.jdbc.Driver"
              jdbcUrl="jdbc:mysql://{{ database_host }}:3306/supercars?useSSL=false"
              />
</Context>
